<%= form_for(@person) do |f| %>
  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% @person.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <h4>
      <div class="form-inline">
        <div class="form-group">
          Name:
          <%= f.text_field :first_name, placeholder: "First", class: 'form-control' %>
          <%= f.text_field :last_name, placeholder: "Last", class: 'form-control' %>
        </div>
      </div>
    </h4>
  </div>

  <div class="row">
    <!-- Basic Info -->
    <div class="col-md-6">
      <div class="card card-block person-basic">
        <h5 class="card-title">Basic Info</h5>
        <div class="card-text">
          <div class="table-responsive">
            <table class="table table-hover">
              <tbody>
                <tr>
                  <td><b>Work Phone:</b></td>
                  <td><%= f.text_field :work_phone, class: 'form-control' %></td>
                </tr>
                <tr>
                  <td><b>Cell Phone:</b></td>
                  <td><%= f.text_field :cell_phone, class: 'form-control' %></td>
                </tr>
                <tr>
                  <td><b>Email:</b></td>
                  <td><%= f.text_field :email, class: 'form-control' %></td>
                </tr>
                <tr>
                  <td><b>Gender:</b></td>
                  <td>
                    <%= f.radio_button :male, "true" %>Male
                    <%= f.radio_button :male, "false" %>Female</td>
                </tr>
                <tr>
                  <td><b>Address:</b></td>
                  <td><%= f.text_field :address, class: 'form-control' %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Notes -->
  <div class="row">
    <div class="col-md-12">
      <div class="card card-block">
        <h5 class="card-title">Notes</h5>
        <p class="card-text">
          <%= f.text_area :notes, class: 'tinymce' %>
        </p>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.button class: 'btn btn-primary form-control' %>
  </div>
<% end %>


<%= tinymce %>
