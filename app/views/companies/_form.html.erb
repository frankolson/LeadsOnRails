<%= form_for(@company) do |f| %>
  <% if @company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% @company.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <h4>Name: <%= f.text_field :name %></h4>
  </div>

  <div class="row">
    <!-- Basic Info -->
    <div class="col-md-6">
      <div class="card card-block company-basic">
        <h5 class="card-title">Basic Info</h5>
        <div class="card-text">
          <div class="table-responsive">
            <table class="table table-hover">
              <tbody>
                <tr>
                  <td><b># Employees:</b></td>
                  <td><%= f.text_field :number_of_employees %></td>
                </tr>
                <tr>
                  <td><b>Product of Service:</b></td>
                  <td><%= f.text_field :product %></td>
                </tr>
                <tr>
                  <td><b>Typical Sale Size:</b></td>
                  <td><%= f.text_field :typical_sale_size %></td>
                </tr>
                <tr>
                  <td><b>Website:</b></td>
                  <td><%= f.text_field :website %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <!-- Mission -->
    <div class="col-md-6">
      <div class="card card-block">
        <h5 class="card-title">Mission</h5>
        <p class="card-text">
          <%= f.text_area :mission, class: 'tinymce' %>
        </p>
      </div>
    </div>
  </div>

  <!-- Notes -->
  <div class="row">
    <div class="col-md-12">
      <div class="card card-block">
        <h5 class="card-title">Notes</h5>
        <p class="card-text">
          <%= f.text_area :notes, class: 'tinymce' %>
        </p>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.button class: 'btn btn-primary form-control' %>
  </div>
<% end %>

<!-- Social Media -->
<div class="row">
  <div class="col-md-12">
    <div class="card card-block">
      <h5 class="card-title">Social Media Profiles</h5>
      <p class="card-text">
        <% if @company.social_media_profiles.empty? %>
          <span>There are no profiles currently connected.</span>
        <% else %>
          <ul class="list-style">
            <% @company.social_media_profiles.each do |p| %>
            <li>
              <a href="<%= p.url %>" target="_blank">
                <%= p.url %>
              </a> | <%= link_to 'Destroy', p, :confirm => 'Are you sure?', :method => :delete %>
            </li>
            <% end %>
          </ul>
        <% end %>

        <%= render 'social_media_profiles/form' %>
      </p>
    </div>
  </div>
</div>


<%= tinymce %>
