<!DOCTYPE html>
<html>
  <head>
    <title>LeadsOnRails</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-dark navbar-fixed-top bg-inverse">
      <button type="button" class="navbar-toggler hidden-sm-up" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar" aria-label="Toggle navigation"></button>
      <a class="navbar-brand" href="#">LeadsOnRails</a>
      <div id="navbar">
        <nav class="nav navbar-nav float-xs-left">
          <%= link_to "Companies", companies_path, class: "nav-item nav-link" %>
        </nav>

        <form class="float-xs-right">
          <input type="text" class="form-control" placeholder="Search...">
        </form>
      </div>
    </nav>

    <div class="container-fluid">
      <div class="row">

        <div class="col-sm-3 col-md-2 sidebar">
          <ul class="nav nav-sidebar">
            <li class="active">
              <%= link_to companies_path do %>
                Companies <span class="sr-only">(current)</span>
              <% end %>
            </li>
          </ul>
        </div>

        <div class="col-sm-9 offset-sm-3 col-md-10 offset-md-2 main">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
